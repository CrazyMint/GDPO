# Environment variables for GDPO/DGDO training
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Weights & Biases API key (get from https://wandb.ai/settings)
export WANDB_API_KEY="your_wandb_api_key_here"

# Hugging Face token (get from https://huggingface.co/settings/tokens)
export HF_TOKEN="your_hf_token_here"

# Hugging Face cache directory (for downloaded models)
export HF_HOME="/path/to/huggingface/cache"

# Optional: Override default paths
# export DATA_DIR="/path/to/data/deepscaler"
# export CKPT_DIR="/path/to/checkpoints"
